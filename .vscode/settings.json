{
  "python.testing.pytestArgs": [
    "tests"
  ],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true
  },
  "black-formatter.args": [
    "--line-length",
    "100",
    "--skip-string-normalization",
    "--exclude",
    "(venv|.tox|.eggs|.mypy_cache|.pytest_cache|.cache|.idea|.vscode|.git|build|dist|.gradle|__pycache__)"
  ],
  "flake8.args": [
    "--ignore=D203,E704,E126,W503,E203",
    "--exclude=.git,.vscode,.idea,.pids,.mypy_cache,.venv,__pycache__,docs/source/conf.py,old,build,dist,venv,pypoetry",
    "--max-complexity=12",
    "--max-line-length=100"
  ],
  "mypy-type-checker.args": [
    "--disallow-untyped-defs",
    "--warn-return-any",
    "--check-untyped-defs",
    "--no-implicit-optional",
    "--namespace-packages",
    "--warn-redundant-casts",
    "--disallow-any-generics",
    "--no-implicit-reexport",
    "--ignore-missing-imports",
    "--explicit-package-bases",
    "--exclude",
    "(venv|.tox|.eggs|.mypy_cache|.pytest_cache|.cache|.idea|.vscode|.git|build|dist|.gradle|__pycache__)"
  ]
}